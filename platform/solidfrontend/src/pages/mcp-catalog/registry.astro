---
import Layout from "../../layouts/Layout.astro";
import { archestraApiSdk } from "@shared";
import { RevalidateButton } from "../../components/RevalidateButton";
import { CatalogListItem } from "../../components/CatalogListItem";

// Forward cookies from browser to backend for auth
const cookies = Astro.request.headers.get("cookie") || "";

const { data: catalog, error } = await archestraApiSdk.getInternalMcpCatalog({
    headers: { cookie: cookies },
});
---

<Layout title="MCP Catalog">
    <main>
        <header>
            <h1>MCP Catalog</h1>
            <RevalidateButton client:load />
        </header>

        {error && <p class="error">Failed to load catalog</p>}

        {catalog && catalog.length === 0 && <p>No catalog items</p>}

        <ul>
            {catalog?.map((item) => (
                <CatalogListItem
                    client:load
                    item={{
                        id: item.id,
                        name: item.name,
                        serverType: item.serverType,
                    }}
                />
            ))}
        </ul>
    </main>
</Layout>

<style>
    main {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    h1 {
        margin: 0;
    }

    ul {
        list-style: none;
        padding: 0;
    }

    .error {
        color: red;
    }
</style>

<style is:global>
    /* Server list item */
    li {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem 1rem;
        border: 1px solid #e0e0e0;
        border-radius: 4px;
        margin-bottom: 0.5rem;
    }

    .server-info {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .type {
        color: #666;
    }

    .edit-btn {
        padding: 0.25rem 0.75rem;
        background: #f0f0f0;
        border: 1px solid #ccc;
        border-radius: 4px;
        cursor: pointer;
    }

    .edit-btn:hover {
        background: #e0e0e0;
    }

    /* Modal styles */
    .modal-backdrop {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1000;
    }

    .modal {
        background: white;
        padding: 1.5rem;
        border-radius: 8px;
        min-width: 300px;
        max-width: 90%;
    }

    .modal h2 {
        margin: 0 0 1rem;
    }

    .modal label {
        display: block;
        margin-bottom: 1rem;
    }

    .modal input {
        display: block;
        width: 100%;
        padding: 0.5rem;
        margin-top: 0.25rem;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .modal .actions {
        display: flex;
        justify-content: flex-end;
        gap: 0.5rem;
        margin-top: 1rem;
    }

    .modal button {
        padding: 0.5rem 1rem;
        border-radius: 4px;
        cursor: pointer;
    }

    .modal button[type="submit"] {
        background: #0066cc;
        color: white;
        border: none;
    }

    .modal button[type="submit"]:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }

    .modal button[type="button"] {
        background: white;
        border: 1px solid #ccc;
    }

    .modal .error {
        color: red;
        margin: 0.5rem 0;
    }
</style>
